<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tostan Art Auction</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .font-display { font-family: 'Fredoka One', cursive; }
        .font-body { font-family: 'Nunito', sans-serif; }
    </style>
</head>
<body class="bg-gray-100 font-body text-gray-800 min-h-screen flex flex-col">
    
    <header class="bg-black text-white">
        <div class="h-4 w-full flex">
            <div class="flex-1 bg-red-600"></div>
            <div class="flex-1 bg-yellow-400"></div>
            <div class="flex-1 bg-green-600"></div>
        </div>

        <nav class="pt-10 pb-6 px-4">
            <div class="container mx-auto text-center">
                <h1 class="text-white text-6xl md:text-8xl font-display tracking-wide uppercase mb-2">Tostan</h1>
                <p class="text-yellow-400 text-xl md:text-2xl font-bold tracking-widest uppercase mb-1">Service Station Art Auction</p>
                <p class="text-yellow-400 text-2xl md:text-3xl font-display tracking-widest">2026</p>
            </div>
        </nav>

        <div class="w-full h-8 bg-red-600 rounded-t-[50%] mt-4 -mb-1"></div>
    </header>

    <div class="container mx-auto px-4 py-16 flex-grow">

        <!-- TIMER BOX (ONLY shows if a timer is active) -->
        <div id="timer-card" class="mb-16 bg-white rounded-xl shadow-lg border-8 border-black p-6 md:p-8 text-center max-w-3xl mx-auto hidden" aria-live="polite">
            <h3 class="text-2xl md:text-3xl font-display text-gray-900 mb-6 tracking-wider uppercase">Auction Ends In</h3>

            <div id="countdown-timer" class="flex justify-center items-center space-x-4 md:space-x-8">
                <div class="flex flex-col items-center w-16 md:w-24">
                    <span id="days" class="text-4xl md:text-6xl font-display text-red-600">00</span>
                    <span class="text-xs md:text-sm font-bold text-gray-500 uppercase tracking-widest mt-2">Days</span>
                </div>
                <span class="text-3xl md:text-5xl font-display text-gray-300 pb-6">:</span>
                <div class="flex flex-col items-center w-16 md:w-24">
                    <span id="hours" class="text-4xl md:text-6xl font-display text-yellow-400">00</span>
                    <span class="text-xs md:text-sm font-bold text-gray-500 uppercase tracking-widest mt-2">Hours</span>
                </div>
                <span class="text-3xl md:text-5xl font-display text-gray-300 pb-6">:</span>
                <div class="flex flex-col items-center w-16 md:w-24">
                    <span id="minutes" class="text-4xl md:text-6xl font-display text-green-600">00</span>
                    <span class="text-xs md:text-sm font-bold text-gray-500 uppercase tracking-widest mt-2">Mins</span>
                </div>
                <span class="text-3xl md:text-5xl font-display text-gray-300 pb-6">:</span>
                <div class="flex flex-col items-center w-16 md:w-24">
                    <span id="seconds" class="text-4xl md:text-6xl font-display text-black">00</span>
                    <span class="text-xs md:text-sm font-bold text-gray-500 uppercase tracking-widest mt-2">Secs</span>
                </div>
            </div>

            <div id="timer-ended" class="hidden mt-6">
                <span class="text-3xl md:text-5xl font-display text-red-600 uppercase tracking-widest">Auction Ended!</span>
            </div>
        </div>
        <!-- END TIMER BOX -->

        <h2 class="text-3xl font-bold mb-10 text-center text-gray-800 font-display tracking-wider uppercase">Available Art Pieces</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% const borderColors = ['border-red-600', 'border-yellow-400', 'border-green-600']; %>
            
            <% items.forEach(function(item, index) { %>
                <div class="bg-white rounded-xl overflow-hidden border-8 <%= borderColors[index % borderColors.length] %> transform transition duration-300 hover:-translate-y-2 shadow-lg hover:shadow-2xl">
                    <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-64 object-cover border-b-4 border-gray-100">
                    <div class="p-6">
                        <h3 class="font-display text-2xl mb-2 text-gray-900"><%= item.name %></h3>
                        <p class="text-gray-600 text-sm mb-6 h-12 overflow-hidden"><%= item.description %></p>
                        
                        <div class="flex justify-between items-center mt-4">
                            <div>
                                <p class="text-xs text-gray-500 uppercase font-bold tracking-wider">Current Bid</p>
                                <span class="text-green-600 font-black text-2xl">$<%= item.current_bid %></span>
                            </div>
                            <a href="/item/<%= item.id %>" class="bg-yellow-400 hover:bg-yellow-500 text-black font-black py-3 px-6 rounded-lg transition duration-200 uppercase tracking-wide shadow-md hover:shadow-lg">
                                Bid Now
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
            
            <% if (items.length === 0) { %>
                <div class="col-span-full text-center py-12">
                    <p class="text-gray-500 text-xl font-display">No art pieces added yet. Check back soon!</p>
                </div>
            <% } %>
        </div>
    </div>
    
    <footer class="bg-black text-white text-center py-4 font-display text-sm uppercase tracking-widest mt-auto">
        <p>Austin College Service Station</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const rawTimerEndsAt = Number('<%= timerEndsAt || 0 %>');

            // 1) If there's no timer, do not show anything.
            if (!rawTimerEndsAt || Number.isNaN(rawTimerEndsAt)) return;

            // timer_ends_at is stored in ms (Date.now()) in your server.js
            const endTimeMs = rawTimerEndsAt;

            // If timer is already expired, don't show the box (keeps your page clean)
            if (endTimeMs <= Date.now()) return;

            const timerCard = document.getElementById('timer-card');
            const endedEl = document.getElementById('timer-ended');

            const daysEl = document.getElementById('days');
            const hoursEl = document.getElementById('hours');
            const minutesEl = document.getElementById('minutes');
            const secondsEl = document.getElementById('seconds');

            timerCard.classList.remove('hidden');

            let intervalId = null;

            function render() {
                const now = Date.now();
                const distance = endTimeMs - now;

                if (distance <= 0) {
                    // Stop & show ended message (and keep only the timer box affected)
                    clearInterval(intervalId);
                    endedEl.classList.remove('hidden');
                    daysEl.innerText = '00';
                    hoursEl.innerText = '00';
                    minutesEl.innerText = '00';
                    secondsEl.innerText = '00';
                    return;
                }

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                daysEl.innerText = String(days).padStart(2, '0');
                hoursEl.innerText = String(hours).padStart(2, '0');
                minutesEl.innerText = String(minutes).padStart(2, '0');
                secondsEl.innerText = String(seconds).padStart(2, '0');
            }

            render();
            intervalId = setInterval(render, 1000);
        });
    </script>
</body>
</html>
