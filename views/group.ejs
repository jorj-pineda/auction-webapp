<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table <%= groupId %> Collection</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .font-display { font-family: 'Fredoka One', cursive; }
        .font-body { font-family: 'Nunito', sans-serif; }
    </style>
</head>
<body class="bg-gray-100 font-body text-gray-800">

    <div class="fixed top-0 left-0 w-full z-50 px-4 pt-4 pointer-events-none hidden" id="timer-card">
        <div class="bg-red-600 text-white rounded-xl shadow-2xl p-3 mx-auto max-w-sm flex items-center justify-between border-4 border-white pointer-events-auto">
            <span class="font-bold uppercase tracking-widest text-sm animate-pulse mr-4">Auction Ends In:</span>
            <div class="font-mono text-2xl font-bold flex gap-1">
                <span id="hours">00</span>:<span id="minutes">00</span>:<span id="seconds">00</span>
            </div>
        </div>
    </div>
    
    <div id="timer-ended" class="fixed inset-0 bg-black/90 z-50 flex items-center justify-center hidden text-white text-center">
        <div>
            <h1 class="text-6xl font-display text-red-500 mb-4">AUCTION CLOSED</h1>
            <p class="text-2xl">Thank you for supporting Tostan!</p>
        </div>
    </div>

    <header class="bg-black text-white mb-8 pb-6">
        <div class="h-4 w-full flex">
            <div class="flex-1 bg-red-600"></div>
            <div class="flex-1 bg-yellow-400"></div>
            <div class="flex-1 bg-green-600"></div>
        </div>
        <nav class="pt-8 px-4 text-center">
            <p class="text-gray-400 text-sm uppercase tracking-widest mb-1">Viewing Collection</p>
            <h1 class="text-5xl font-display tracking-wide uppercase">Table <%= groupId %></h1>
            <a href="/" class="inline-block mt-4 text-gray-300 hover:text-white underline text-sm">View All Tables</a>
        </nav>
    </header>

    <div class="container mx-auto px-4 pb-20">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% items.forEach(function(item) { %>
                <div class="bg-white rounded-2xl overflow-hidden shadow-lg border-2 border-gray-100 transition hover:shadow-2xl hover:-translate-y-1 relative flex flex-col">
                    <div class="relative">
                        <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-64 object-cover">
                        <div class="absolute bottom-0 left-0 bg-black/70 text-white text-xs px-2 py-1 uppercase font-bold rounded-tr-lg">
                            Table <%= item.group_id || 'Gen' %>
                        </div>
                    </div>
                    
                    <div class="p-6 flex flex-col flex-grow">
                        <h2 class="text-2xl font-display mb-1 text-gray-900 leading-tight"><%= item.name %></h2>
                        
                        <div class="mt-auto pt-4 flex justify-between items-end border-t border-gray-100">
                            <div>
                                <p class="text-xs text-gray-500 font-bold uppercase">Current Bid</p>
                                <p class="text-3xl font-bold text-green-600 font-sans">$<%= Number(item.current_bid).toFixed(2) %></p>
                            </div>
                            <a href="/item/<%= item.id %>" class="bg-yellow-400 hover:bg-yellow-500 text-black font-bold py-2 px-6 rounded-full shadow-md transition transform active:scale-95 uppercase text-sm tracking-wider">
                                BID NOW
                            </a>
                        </div>
                        <% if (item.bidder_name) { %>
                            <p class="text-xs text-gray-400 mt-2 text-right">Held by: <%= item.bidder_name %></p>
                        <% } %>
                    </div>
                </div>
            <% }); %>
            
            <% if (items.length === 0) { %>
                <div class="col-span-full text-center py-20 text-gray-500">
                    <p class="text-xl">No items listed for Table <%= groupId %> yet.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        const endTimeMs = parseInt("<%= typeof timerEndsAt !== 'undefined' ? timerEndsAt : 0 %>", 10);
        if (endTimeMs > 0 && endTimeMs > Date.now()) {
            const timerCard = document.getElementById('timer-card');
            const endedEl = document.getElementById('timer-ended');
            const hoursEl = document.getElementById('hours');
            const minutesEl = document.getElementById('minutes');
            const secondsEl = document.getElementById('seconds');
            timerCard.classList.remove('hidden');

            function render() {
                const now = Date.now();
                const distance = endTimeMs - now;
                if (distance <= 0) {
                    endedEl.classList.remove('hidden');
                    return;
                }
                const totalHours = Math.floor(distance / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                hoursEl.innerText = String(totalHours).padStart(2, '0');
                minutesEl.innerText = String(minutes).padStart(2, '0');
                secondsEl.innerText = String(seconds).padStart(2, '0');
                requestAnimationFrame(render);
            }
            render();
        }
    </script>
</body>
</html>